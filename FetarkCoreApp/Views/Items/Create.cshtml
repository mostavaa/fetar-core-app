@model ItemVM
@{
    ViewData["Title"] = "Create Item";

    var success = ViewData["success"];
    var error = ViewData["error"];
    bool EditMode = Model.ElementId > 0;
}


<div class="row m-3 p-3">
    <div class="col-md-5 mb-0 mt-0 mr-auto ml-auto">
        <div class="card">
            <div class="card-header bg-secondary text-white">
                @(EditMode ? "Edit" : "Create") Item
            </div>
            <div class="card-body p-5">
                @if (error != null)
                {
                    var errors = ((List<string>)error);
                    for (int i = 0; i < errors.Count; i++)
                    {
                        <p class="alert alert-danger">@errors[i]</p>
                    }
                }
                @if (success != null)
                {
                    var successMsgs = ((List<string>)success);
                    for (int i = 0; i < successMsgs.Count; i++)
                    {
                        <p class="alert alert-success">@successMsgs[i]</p>
                    }
                }
                        <form method="post" asp-action="@(EditMode?"Edit":"Create")" class="form form-horizontal">
                            @Html.HiddenFor(o => o.ElementId)
                            <div class="form-group">
                                <label class="label " for="Name">Name</label>
                                <input type="text" asp-for="Name" name="Name" id="Name" class="form-control" />
                                <span class="text-danger" asp-validation-for="Name"></span>
                            </div>

                            <div class="form-group">
                                <label class="label " for="SubName">Sub Name</label>
                                <input type="text" asp-for="SubName" name="SubName" id="SubName" class="form-control" />
                                <span class="text-danger" asp-validation-for="SubName"></span>
                            </div>


                            <div class="form-group">
                                <label class="label " for="SubName">Price</label>
                                <input type="number" step=".01" asp-for="Price" name="Price" id="Price" class="form-control" />
                                <span class="text-danger" asp-validation-for="Price"></span>
                            </div>

                            <div class="form-check">
                                <input asp-for="Type" class="form-check-input" type="radio" name="Type" id="Type1" value="BLADY">
                                <label class="form-check-label" for="Type1">
                                    BLADY
                                </label>
                            </div>
                            <div class="form-check">
                                <input asp-for="Type" class="form-check-input" type="radio" name="Type" id="Type2" value="SHAMY">
                                <label class="form-check-label" for="Type2">
                                    SHAMY
                                </label>
                            </div>
                            <span class="text-danger" asp-validation-for="Type"></span>

                            <div class="form-group">
                                <input type="submit" name="submit" id="submit" class="btn-block btn btn-dark" value="@(EditMode?"Edit":"Create")" />
                            </div>
                        </form>
            </div>

        </div>
    </div>
</div>