@model OrderVM
@{
    ViewData["Title"] = "Create Order";
    var success = ViewData["success"];
    var error = ViewData["error"];
}


<div class="row m-3 p-3">
    <div class="col-md-5 mb-0 mt-0 mr-auto ml-auto">
        <div class="card">
            <div class="card-header bg-secondary text-white">
                Create Order
            </div>
            <div class="card-body p-5">
                @if (error != null)
                {
                    var errors = ((List<string>)error);
                    for (int i = 0; i < errors.Count; i++)
                    {
                        <p class="alert alert-danger">@errors[i]</p>
                    }
                }
                @if (success != null)
                {
                    var successMsgs = ((List<string>)success);
                    for (int i = 0; i < successMsgs.Count; i++)
                    {
                        <p class="alert alert-success">@successMsgs[i]</p>
                    }
                }
                <form method="post" asp-action="CreateOrder" class="form form-horizontal">
                    <div class="form-group">
                        <label class="label " for="Name">Name</label>
                        <input type="text" name="Name" id="Name" class="form-control" />
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" name="submit" id="submit" class="btn-block btn btn-dark" value="Submit" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
